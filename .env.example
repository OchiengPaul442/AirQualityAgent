# ===================================
# Air Quality AI Agent Configuration
# ===================================

# Project Settings
PROJECT_NAME=AERIS-AQ - Air Quality AI Assistant API

# ===================================
# MCP Configuration
# ===================================
# (Optional) Connect to other MCP servers
# MCP_SERVER_NAME_COMMAND=python
# MCP_SERVER_NAME_ARGS=/path/to/server.py

# ===================================
# AI Provider Configuration
# ===================================
# For <3s responses: Use Gemini (fastest) or OpenAI
# For offline testing: Use Ollama (10-20s per response)

AI_PROVIDER=gemini
AI_MODEL=gemini-1.5-flash
AI_API_KEY=your_api_key_here

# Alternatives:
# AI_PROVIDER=openai
# AI_MODEL=gpt-4-turbo
# AI_PROVIDER=ollama
# AI_MODEL=qwen2.5:3b

# Provider URLs
OPENAI_BASE_URL=https://api.openai.com/v1
OLLAMA_BASE_URL=http://localhost:11434

# Performance Settings
AI_MAX_TOKENS=2048
AI_RESPONSE_TEMPERATURE=0.3

# ===================================
# Database Configuration
# ===================================
# Default: SQLite in ./data directory (auto-created)
# For Docker: sqlite:////app/data/chat_sessions.db
# For local dev: sqlite:///./data/chat_sessions.db
# For PostgreSQL: postgresql://user:password@host:5432/dbname
# Leave blank to use hardcoded default: sqlite:///./data/chat_sessions.db
DATABASE_URL=

# ===================================
# Data Source Configuration
# ===================================
WAQI_API_KEY=your_waqi_api_key_here
AIRQO_API_TOKEN=your_airqo_token_here
DASHSCOPE_API_KEY=
ENABLED_DATA_SOURCES=waqi,airqo,openmeteo,carbon_intensity,defra,uba,nsw

# ===================================
# AI Response Quality
# ===================================
AI_RESPONSE_STYLE=general

# ===================================
# Document Processing Limits (optional, defaults provided)
# ===================================
DOCUMENT_MAX_LENGTH_PDF=50000
DOCUMENT_MAX_LENGTH_CSV=50000
DOCUMENT_MAX_LENGTH_EXCEL=100000
DOCUMENT_PREVIEW_ROWS_CSV=200
DOCUMENT_PREVIEW_ROWS_EXCEL=100
AGENT_MAX_DOC_LENGTH=100000

# ===================================
# Cache Configuration
# ===================================
CACHE_TTL_SECONDS=3600
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ===================================
# Session Management
# ===================================
MAX_MESSAGES_PER_SESSION=100
SESSION_LIMIT_WARNING_THRESHOLD=90
DISABLE_SESSION_LIMIT=false

# ===================================
# CORS Configuration
# ===================================
# Comma-separated list of allowed origins (supports multiple domains)
# Development: http://localhost:3000,http://localhost:5173
# Production: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=http://localhost:8000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*
